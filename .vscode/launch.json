{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "port": 3000,
            "secret": "my_secret",
            "host": "localhost"
        },
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Adam worker, bool replace, 0",
            "type": "python",
            "request": "launch",
            "module": "cosmic_ray.cli",
            "cwd": "${workspaceFolder}/test/test_project",
            "args": [
                "worker",
                "adam.py",
                "core/ReplaceTrueFalse",
                "0",
                "cosmic-ray.unittest.local.conf"
            ]
        },
        {
            "name": "Run example worker",
            "type": "python",
            "request": "launch",
            "module": "cosmic_ray.cli",
            "cwd": "${workspaceFolder}/test/test_project",
            "args": [
                "worker",
                "deleteme.py",
                "core/ReplaceTrueFalse",
                "1",
                "cosmic-ray.unittest.local.conf"
            ]
        },
        {
            "name": "init",
            "type": "python",
            "request": "launch",
            "module": "cosmic_ray.cli",
            "cwd": "${workspaceFolder}/test/test_project",
            "args": [
                "init",
                "cosmic-ray.unittest.local.conf",
                "deleteme.json"
            ]
        },
        {
            "name": "exec",
            "type": "python",
            "request": "launch",
            "module": "cosmic_ray.cli",
            "cwd": "${workspaceFolder}/test/test_project",
            "args": [
                "exec",
                "deleteme.json"
            ]
        },
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "module": "module.name",
            "env": {
                "VAR1": "1",
                "VAR2": "2"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "arg1",
                "arg2"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}